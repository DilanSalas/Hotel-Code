            @Html.DisplayFor(model => model.tipoPago)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdCheque)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdCheque)
