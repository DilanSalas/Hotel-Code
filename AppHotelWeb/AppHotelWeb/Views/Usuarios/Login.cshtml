@model AppHotelWeb.Models.Usuario

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center" id="LetraEspecial" >Iniciar Sesión</h1>
<div class="container">
    <div class="row">
        <div class="col-sm-4">
        </div>

        @* Contenedor para el formulario de autenticación *@
        <div class="col-sm-4">
            <form asp-action="Login" id="FormularioLogin">
                @if (TempData["Mensaje"] != null)
                {
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <strong>Error!</strong> @TempData["Mensaje"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @* Solicitud de cédula *@
                <div class="form-group">
                    <label asp-for="Cedula" class="form-label">Cédula</label>
                    <input asp-for="Cedula" class="form-control" />
                    <span asp-validation-for="Cedula" class="text-danger"></span>
                </div>

                @* Solicitud de contraseña *@
                <div class="form-group">
                    <label asp-for="clave" class="form-label">Contraseña</label>
                    <input asp-for="clave" class="form-control" type="password" />
                    <span asp-validation-for="clave" class="text-danger"></span>
                </div>

                <div class="form-group">
                    ¿No tienes una cuenta?
                    <a asp-controller="Usuarios" asp-action="Create">Registrarse</a>
                </div>

                @* Botón encargado de ejecutar el post del formulario *@
                <div class="col-auto">
                    <input type="submit" value="Ingresar" class="btn btn-primary mt-2 btn btn-outline-dark" id="LetraEspecial" />
                </div>
            </form>
        </div>

        <div class="col-sm-4">
        </div>
    </div>
</div>
